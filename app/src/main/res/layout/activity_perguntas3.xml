<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_box"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Logo"
                android:src="@drawable/imagem1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Número da pergunta"
                android:src="@drawable/numero3" />  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" CARACTERÍSTICAS DO DOMICÍLIO"
            android:fontFamily="@font/manrope_bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUANTOS CÔMODOS TEM ESSE DOMICÍLIO?"
            android:fontFamily="@font/manrope_semibold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
        <LinearLayout
            android:background="@drawable/blue_box"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinnerComodos"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUANTO DESTES SÃO DORMITÓRIOS PARA OS MORADORES?"
            android:fontFamily="@font/manrope_semibold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
        <LinearLayout
            android:background="@drawable/blue_box"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinnerDormitorios"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUANTOS BANHEIROS COM CHUVEIRO E VASO SANITÁRIO?"
            android:fontFamily="@font/manrope_semibold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
        <LinearLayout
            android:background="@drawable/blue_box"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinnerBanheirosCompletos"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUANTOS BANHEIROS SEM CHUVEIRO E COM VASO SANITÁRIO?"
            android:fontFamily="@font/manrope_semibold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
        <LinearLayout
            android:background="@drawable/blue_box"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinnerBanheirosIncompletos"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALGUM MORADOR TEM ACESSO A INTERNET NO DOMICÍLIO?"
            android:fontFamily="@font/manrope_semibold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
        <LinearLayout
            android:background="@drawable/blue_box"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/radioGroupInternet"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radioInternetSim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim"
                    android:fontFamily="@font/manrope_semibold"/>
                <RadioButton
                    android:id="@+id/radioInternetNao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não"
                    android:fontFamily="@font/manrope_semibold"/>
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A RESIDÊNCIA POSSUI UMA MÁQUINA DE LAVAR ROUPA?"
            android:fontFamily="@font/manrope_semibold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
        <LinearLayout
            android:background="@drawable/blue_box"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/radioGroupMaquinaLavar"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radioMaquinaSim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim"
                    android:fontFamily="@font/manrope_semibold"/>
                <RadioButton
                    android:id="@+id/radioMaquinaNao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não"
                    android:fontFamily="@font/manrope_semibold"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnPrevious"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#d6eef0"
                android:textColor="#006680"
                android:fontFamily="@font/manrope_semibold"
                android:text="Anterior"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="#006680"
                android:fontFamily="@font/manrope_semibold"
                android:text="Próximo"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>